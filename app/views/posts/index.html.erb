<h1>Listing posts</h1>

<p><%= link_to 'New Post', new_post_path %></p>

<% @posts.each do |post| %>
<h3><%= link_to post.title, post %></h3>
<p><%= post.content %></p>
<p>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<% end %>
